<div class="headerBackground">
<h1 class = "header">Edit Book</h1>
</div>

<%= form_for @book do |f|%>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :author %>
	<%= f.text_field :author %>
	<%= f.label :no_of_pages %>
	<%= f.text_field :no_of_pages %>
	<%= f.label :isbn %>
	<%= f.text_field :isbn %>
	<%= f.submit%>
<%end%>